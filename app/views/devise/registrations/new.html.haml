.contents
  %h2 --------- 新規登録する ---------
  = form_with(model: @user, local: true, class: "contents__form") do |f|
    / = render "devise/shared/error_messages", resource: resource
    .devise
      .devise__left
        = f.label :name, class: "label"
        %br
        = f.label :email, class: "label"
        %br
        = f.label :password, class: "label"
        %br
        = f.label :password_confirmation, class: "label"
      .devise__right
        = f.text_field :name, autofocus: true, placeholder: "例) 鈴木 太郎", autocomplete: "name", class: "text"
        = f.email_field :email, autofocus: true, placeholder: "suzuki@example.com", autocomplete: "email", class: "text"
        %br
        = f.password_field :password, placeholder: "6文字以上の半角英数字", autocomplete: "new-password", class: "text"
        %br
        = f.password_field :password_confirmation, placeholder: "パスワードを再入力してください", autocomplete: "new-password", class: "text"
    = f.submit "新規登録する", class: "submit"
    %br
    %h3 or
    = link_to "ログインへ", new_user_session_path, class: "link"
