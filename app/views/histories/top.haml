.content
  .content__text
    - if current_user
      %h1
        = "Welcome " + current_user.name
    - else
      %h1 あなたの車大丈夫ですか？
  .content__image
    = image_tag "speed-1249610_1280.jpg", class: "content__image--top"
  %ul.content__nav
    %li.content__nav--list
      menu
      %ul.pulldown
        - if current_user
          %li.pulldown__list
            = link_to "メンテナンス情報を入力する", new_history_path, class: "nav"
          %li.pulldown__list
            = link_to "車体情報の入力", new_car_path,class: "nav"
        - else
          %li.pulldown__list
            = link_to "ログインユーザーのみ閲覧可", new_user_session_path, class: "nav";
    %li.content__nav--list
      data
      %ul.pulldown
        - if current_user
          %li.pulldown__list
            = link_to "メンテナンス記録", histories_path, class: "nav";
          %li.pulldown__list
            = link_to "車体情報", cars_path, class: "nav";
        - else
          %li.pulldown__list
            = link_to "ログインユーザーのみ閲覧可", new_user_session_path, class: "nav";

    %li.content__nav--list
      account
      %ul.pulldown
        - if current_user
          %li.pulldown__list
            = link_to "マイページ", users_path, class: "nav"
          %li.pulldown__list
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav"
        - else
          %li.pulldown__list
            = link_to "新規登録", new_user_registration_path, class: "nav"
          %li.pulldown__list
            = link_to "ログイン", new_user_session_path, class: "nav"
.footer
